<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_postItem_black" >
        <item name="background">@color/postItem</item>
        <item name="android:background">@color/postItem</item>
    </style>

    <style name="custom_postItem_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_postItem_body" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="custom_view_bottomOfCard" >
        <item name="android:background">@color/postItem_divider_color</item>
    </style>
</resources>